{
  "name": "mokin-recruit",
  "version": "1.0.0",
  "description": "転職プラットフォーム - Mokin Recruit",
  "private": true,
  "workspaces": [
    "packages/*",
    "client"
  ],
  "scripts": {
    "preinstall": "node scripts/check-node-version.js",
    "dev": "npm run dev --workspace=client -- --hostname 0.0.0.0",
    "dev:client": "npm run dev --workspace=client -- --hostname 0.0.0.0",
    "build": "npm run build --workspace=client",
    "build:client": "npm run build --workspace=client",
    "build-for-agent-debug": "npm run build --workspace=client",
    "start": "npm start --workspace=client",
    "test": "npm test --workspace=client",
    "test:client": "npm test --workspace=client",
    "lint": "npm run lint --workspace=client",
    "lint:client": "npm run lint --workspace=client",
    "lint:fix": "npm run lint:fix --workspace=client",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "setup": "npm install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "clean": "npm run clean --workspace=client && rm -rf node_modules",
    "clean:client": "npm run clean --workspace=client",
    "fix:memory": "node scripts/fix-memory-leak.js",
    "monitor:memory": "node --expose-gc scripts/monitor-memory.js",
    "rebuild": "npm run clean && npm install",
    "postinstall": "echo 'Dependencies installed. Run npm run dev to start.'"
  },
  "keywords": [
    "転職",
    "求人",
    "スカウト",
    "プラットフォーム",
    "monorepo",
    "next.js"
  ],
  "author": "Mokin Recruit Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "supabase": "^2.34.3"
  },
  "engines": {
    "node": ">=20.0.0 <23.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tiptap/extension-table": "^3.2.0",
    "@tiptap/extension-table-cell": "^3.2.0",
    "@tiptap/extension-table-header": "^3.2.0",
    "@tiptap/extension-table-row": "^3.2.0",
    "bcrypt": "^6.0.0",
    "node": "^24.6.0",
    "npx": "^10.2.2"
  }
}
