{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install --production=false",
  "framework": "nextjs",
  "functions": {
    "app/**/*.ts": {
      "maxDuration": 30
    },
    "pages/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/auth/reset-password/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/auth/reset-password/new",
      "destination": "/auth/reset-password/new"
    }
  ]
} 