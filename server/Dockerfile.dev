FROM node:18-alpine

# 必要なパッケージをインストール（OpenSSL、PostgreSQLクライアント等）
RUN apk add --no-cache \
    openssl \
    postgresql-client \
    bash \
    curl

# 作業ディレクトリを設定
WORKDIR /app

# package.jsonをコピー
COPY package*.json ./

# 依存関係をインストール（package-lock.jsonが存在しない場合はnpm installを使用）
RUN npm install

# アプリケーションコードをコピー
COPY . .

# Prismaクライアントを生成
RUN npx prisma generate

# ポートを公開
EXPOSE 3001

# 開発サーバーを起動
CMD ["npm", "run", "dev"] 